{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Bonus: Debug",
			// Prints to the debug console instead of the terminal
			// Can't see statics in debugger
			"type": "cppdbg",
			"MIMode": "lldb",
			// Doesn't support expression-based breakpoints
			// Casting in watch window will give "invalid syntax"
			// "type": "lldb",
			"request": "launch",
			"program": "${workspaceFolder}/miniRT",
			"args": [ "scenes/bonus_only/weird_index_of_refractions.rt" ],
			// "args": [ "scenes/bonus_only/total_internal_reflection.rt" ],
			"cwd": "${workspaceFolder}",
			"preLaunchTask": "Bonus: Debug",
			"internalConsoleOptions": "openOnSessionStart"
		},
		{
			"name": "Bonus: Release",
			"type": "cppdbg",
			"MIMode": "lldb",
			"request": "launch",
			"program": "${workspaceFolder}/miniRT",
			"args": [ "scenes/bonus_only/weird_index_of_refractions.rt" ],
			"cwd": "${workspaceFolder}",
			"preLaunchTask": "Bonus: Release",
			"internalConsoleOptions": "openOnSessionStart"
		},
		{
			"name": "Non-bonus: Debug",
			"type": "cppdbg",
			"MIMode": "lldb",
			"request": "launch",
			"program": "${workspaceFolder}/miniRT",
			"args": [ "scenes/invalid/no_light.rt" ],
			"cwd": "${workspaceFolder}",
			"preLaunchTask": "Non-bonus: Debug",
			"internalConsoleOptions": "openOnSessionStart"
		},
		{
			"name": "Non-bonus: Release",
			"type": "cppdbg",
			"MIMode": "lldb",
			"request": "launch",
			"program": "${workspaceFolder}/miniRT",
			"args": [ "scenes/invalid/no_ambient.rt" ],
			// "args": [ "scenes/invalid/zero_cylinder_diameter.rt" ],
			// "args": [ "scenes/invalid/zero_cylinder_height.rt" ],
			// "args": [ "scenes/invalid/zero_sphere_diameter.rt" ],
			"cwd": "${workspaceFolder}",
			"preLaunchTask": "Non-bonus: Release",
			"internalConsoleOptions": "openOnSessionStart"
		}
	]
}
